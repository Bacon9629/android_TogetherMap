<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
        <!--設定形狀的顏色-->
        <corners
            android:radius="5dp"/>
        <!--設定邊框-->
        <stroke
            android:width="4dp"
            android:color="#FF7A7A7A"/>
        <!--設定內容與邊界的距離-->
        <padding
            android:top="28dp"
            android:right="28dp"
            android:bottom="28dp"
            android:left="28dp"/>

</shape>