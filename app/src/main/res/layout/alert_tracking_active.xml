<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edge2">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="啟動足跡追蹤"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="請輸入你的暱稱："
        app:layout_constraintBottom_toTopOf="@+id/alert_tracking_cancel_tv_bt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/alert_tracking_ok_tv_bt"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="48dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/item_touch_effect"
        android:gravity="center"
        android:text="開啟追蹤"
        android:textColor="#00BCD4"
        app:layout_constraintBottom_toBottomOf="@+id/alert_tracking_cancel_tv_bt"
        app:layout_constraintEnd_toStartOf="@+id/alert_tracking_cancel_tv_bt"
        app:layout_constraintTop_toTopOf="@+id/alert_tracking_cancel_tv_bt" />

    <TextView
        android:id="@+id/alert_tracking_cancel_tv_bt"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/item_touch_effect"
        android:gravity="center"
        android:text="取消"
        android:textColor="#00BCD4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <EditText
        android:id="@+id/alert_tracking_name_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="8"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="@+id/textView16"
        app:layout_constraintStart_toEndOf="@+id/textView16"
        app:layout_constraintTop_toTopOf="@+id/textView16" />
</androidx.constraintlayout.widget.ConstraintLayout>