<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/current_trip_main_fragment_constrain"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/navigation_photo_trip_tv_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_touch_effect"
            android:clickable="true"
            android:padding="10dp"
            android:text="@string/bottom_navigation_journey"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/navigation_photo_photo_tv_bt"
            app:layout_constraintEnd_toStartOf="@+id/navigation_photo_photo_tv_bt"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/navigation_photo_photo_tv_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_touch_effect"
            android:clickable="true"
            android:padding="10dp"
            android:text="@string/bottom_navigation_photo"
            android:textColor="#FF9800"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/navigation_photo_gps_tv_bt"
            app:layout_constraintEnd_toStartOf="@+id/navigation_photo_gps_tv_bt"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/navigation_photo_trip_tv_bt" />

        <TextView
            android:id="@+id/navigation_photo_gps_tv_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_touch_effect"
            android:clickable="true"
            android:padding="10dp"
            android:text="@string/bottom_navigation_gps"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/navigation_photo_friend_tv_bt"
            app:layout_constraintEnd_toStartOf="@+id/navigation_photo_friend_tv_bt"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/navigation_photo_photo_tv_bt" />

        <TextView
            android:id="@+id/navigation_photo_friend_tv_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_touch_effect"
            android:clickable="true"
            android:padding="10dp"
            android:text="@string/bottom_navigation_participate"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/navigation_photo_gps_tv_bt" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>